<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <!-- A website title -->
    <title>@ViewData["Title"]</title>
    <!-- An icon for the website -->
    <link rel="icon" href="~/img/4.png" type="image/icon type">
    <!-- Style the site using Bootstrap -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Include at least one change to the styling using your own CSS file -->
    <link href="~/css/style.css" rel="stylesheet" />

</head>

<body>

    <nav>
        <a asp-controller="newView" asp-action="Index">Home</a>
        <a asp-controller="newView" asp-action="Calculator">Grade Calculator</a>
    </nav>

    <div>
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
    <script src="~/js/GradeCalculator.js"></script>

</body>

</html>
